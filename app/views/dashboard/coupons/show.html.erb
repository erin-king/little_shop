<h1>Manage Coupon</h1>

<h2>Code: <%= @coupon.code %> </h2>
<h2>Discount: <%= @coupon.discount*100 %>% Off </h2>
<p><%= link_to "Add New Coupon", new_dashboard_coupon_path %></p>

<p><%= link_to "Edit Coupon", edit_dashboard_coupon_path(@coupon) %></p>
<p><%= link_to "Delete Coupon", dashboard_coupon_path(@coupon), method: :delete  %></p>

<% if @coupon.active? %>
  <p><%= link_to "Disable Coupon" %></p>
<% else %>
  <p><%= link_to "Enable Coupon" %></p>
<% end %>
